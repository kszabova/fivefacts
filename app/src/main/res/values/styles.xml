<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FactTextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minLines">2</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="SourceTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#3F4142</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/defaultBackground</item>
        <item name="android:textColor">@color/buttonText</item>
    </style>

</resources>
